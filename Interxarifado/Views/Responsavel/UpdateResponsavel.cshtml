@using Interxarifado.Models
@model ResponsavelSetor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "/Views/Layout.cshtml";
    ViewBag.Title = "Alterar Funcionario";
}

<div>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Responsavel/IndexResponsavel">Responsaveis</a></li>
        <li class="breadcrumb-item active" aria-current="page">Alterar Responsavel</li>
    </ol>
</div>

<form action="/Responsavel/UpdateResponsavel/@Model.id" method="POST">
    <div>
         <input type="hidden" name="id" value="@Model.id" />
    </div>
    <div>
        <label>Nome</label>
        <input type="text" class="form-control" name="nome"/>
    </div>

    <div>
        <label>CPF</label>
        <input type="text" name="cpf" class="form-control"/>
    </div>

    <div>
        <label>Email</label>
        <input type="text" name="email" class="form-control"/>
    </div>
    <div>
        <label>Senha</label>
        <input type="text" name="senha" class="form-control"/>
    </div>
    <div>
        <label>Salario</label>
        <input type="number" name="cpf" class="form-control"/>
    </div>
    <div>
        <label>Numero do Concurso</label>
        <input type="text" name="nmrConcurso" class="form-control"/>
    </div>

    <button class="btn btn-primary" style="margin-top: 20px">Salvar</button>
</form>